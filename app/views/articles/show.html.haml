.container
  .row
    .col-md-8.mx-auto
      = link_to "Back",articles_path,class:"nav-link form-control btn btn-dark"
      %h1= @article.hidline
      %p= @article.content
      %p
        - @article.article_tags.each do |article_tag|
          %p= article_tag.tag
      %p= @article.created_at
      %hr/
      %h2 Comments
      = form_for([@article,@article.comments.build]) do |f|
        .form-group
          %strong= f.label :content
          = f.text_area :content,class:"form-group form-control"
        .form-group
          = f.submit  class:"form-control btn btn-primary"
      - @article.comments.each do |comment|
        %p
          %strong= comment.content
        %hr/
