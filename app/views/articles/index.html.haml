.container
  .row
    .col-md-8.mx-auto
      %br/
      = link_to "New",new_article_path, class:"nav-link btn btn-primary form-control"
      %br/
      %h1.text-center Articles
      - @articles.each do |article|
        %hr/
        %h1= article.hidline
        %p= article.content
        %p= article.created_at
        %p= link_to "Edit",edit_article_path(article), class:"nav-link btn btn-success "
        %p= link_to "Show",article_path(article), class:"nav-link  btn btn-secondary"
        %p= button_to "Delete",article_path(article), class:"nav-link btn btn-dark form-control",method: :delete
        %hr/
