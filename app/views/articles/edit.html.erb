<div class="container">
	<div class="row">
		<div class="col-md-8 mx-auto">
			<h1>Edit Article</h1>
			<%=form_for @article do |f|%>
				<%= f.label :hidline %>
				<%= f.text_field :hidline,class:"form-group form-control" %>
				<br>
				<%= f.label :content %>
    			<%= f.rich_text_area :content %>
    			<br>
				<%= f.submit  class:"form-control btn btn-primary" %>
			<% end %>
			<%=link_to "Back",articles_path,class:"nav-link" %>
		</div>
	</div>
</div>		